<?xml version='1.0' encoding='utf-8'?>
<widget id="com.joads" version="1.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>JoADS</name>
    <description>
        Jordan ADS
    </description>
    <author email="ahmednasa4@gmail.com" href="">
        Ahmed Nabeel Al-Gobari
    </author>
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="15" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="SplashScreenDelay" value="4000" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreen" value="splash.png" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <resource-file src="google-services.json" target="app/google-services.json" />
        <icon qualifier="ldpi" src="www/res/icon/android/mipmap-ldpi/joads.png" />
        <icon qualifier="mdpi" src="www/res/icon/android/mipmap-mdpi/joads.png" />
        <icon qualifier="hdpi" src="www/res/icon/android/mipmap-hdpi/joads.png" />
        <icon qualifier="xhdpi" src="www/res/icon/android/mipmap-xhdpi/joads.png" />
        <icon qualifier="xxhdpi" src="www/res/icon/android/mipmap-xxhdpi/joads.png" />
        <icon qualifier="xxxhdpi" src="www/res/icon/android/mipmap-xxxhdpi/joads.png" />
        <splash density="ldpi" src="www/res/screen/android/ldpi/splash.png" />
        <splash density="mdpi" src="www/res/screen/android/mdpi/splash.png" />
        <splash density="hdpi" src="www/res/screen/android/hdpi/splash.png" />
        <splash density="xhdpi" src="www/res/screen/android/xhdpi/splash.png" />
        <splash density="xxhdpi" src="www/res/screen/android/xxhdpi/splash.png" />
        <splash density="xxxhdpi" src="www/res/screen/android/xxxhdpi/splash.png" />
        <allow-intent href="market:*" />
    </platform>
    <splash src="splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <resource-file src="GoogleService-Info.plist" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="^5.0.1" />
    <plugin name="cordova-plugin-appminimize" spec="https://github.com/tomloprod/cordova-plugin-appminimize" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="phonegap-plugin-push" spec="^2.1.2" />
    <engine name="android" spec="~6.4.0" />
</widget>
